package Study_01;

public class AccessModifier {
	public static void main(String[] args) {
		
		// 자바에서 필수적으로 사용되는 접근 제어자
		// 어디에서든 접근 가능
		public no1;
		// 같은 클래스 내에서만 접근 가능
		private no2;
		// 같은 패키지 / 상속받은 class 는 접근 가능
		protect no3;
		// 같은 패키지만 가능
		int no4;
		String no5;
		// 하나로써 모두에게 공유
		static no6;
		
		// 그렇다면 어디서든 접근 가능한 public만 쓰면 되는게 아닌가?
		// 중요한 비밀정보 같은 것은 외부에서 접근 불가능해야함
		// 잘못 호출되는것을 방지
	}
}
